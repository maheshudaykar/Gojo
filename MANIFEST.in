# Include README and documentation
include README.md
include CONTRIBUTING.md
include LICENSE
include GITHUB_UPLOAD_GUIDE.md
include PRODUCTION_README.md
include UPGRADE_SUMMARY.md
include UI_IMPROVEMENTS.md

# Include requirements
include requirements.txt
include requirements_production.txt
include setup.py
include setup.cfg
include pyproject.toml

# Include scripts
include run_gojo.bat
include migrate_policy.py

# Include type information
recursive-include phish_detector py.typed

# Include web app templates and static files
recursive-include webapp/templates *.html
recursive-include webapp/static *

# Include GitHub workflows
recursive-include .github *.yml

# Exclude unwanted files
exclude .gitignore
recursive-exclude * __pycache__
recursive-exclude * *.py[cod]
recursive-exclude * *.so
recursive-exclude * .DS_Store

# Exclude data, models, logs
exclude models/*
exclude logs/*
exclude data/*
global-exclude *.pkl
global-exclude *.joblib
global-exclude *.log

# Exclude development files
exclude .venv/*
exclude build/*
exclude dist/*
exclude *.egg-info/*
